process.env.NON_INTERACTIVE_MODE = process.argv[1].endsWith('lisky') && process.argv.length > 2;

// eslint-disable-next-line vars-on-top
var lisky = require('../dist').default;

const runCommand = () => {
	lisky
		.delimiter('')
		.parse(process.argv);

	lisky
		.exec('exit');
};

module.exports = process.env.NON_INTERACTIVE_MODE === 'true'
	? runCommand()
	: lisky;
