{
	"extends": ["lisk-base"],
	"globals": {
		"naclInstance": true
	},
	"rules": {
		"arrow-parens": ["error", "as-needed"],
		"curly": "off",
		"indent": "off",
		"no-confusing-arrow": "off",
		"no-mixed-operators": "off",
		"import/no-extraneous-dependencies": [
			"error", {
				"devDependencies": [
					"test/**",
					"**/Gruntfile{,.js}" // grunt config
				],
				"optionalDependencies": false,
				"packageDir": "./"
			}
		]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js"],
					"moduleDirectory": [
						"node_modules",
						"src"
					]
			}
		}
	}
}
