{
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "camelcase": ["error", {"properties": "always"}],
    "eqeqeq": ["error", "always"],
    "no-eq-null": "error",
    "indent": ["error", "tab"],
    "no-use-before-define": "error",
    "new-cap": ["error", { "newIsCap": true }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-undef": "error",
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
    "strict": ["error", "global"]
  },
  "env": {
    "browser": true,
    "node": true
  }
}
