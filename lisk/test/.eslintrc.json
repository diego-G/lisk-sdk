{
	"plugins": ["chai-expect"],
	"env": {
		"mocha": true
	},
	"globals": {
		"_": true,
		"__testContext": true,
		"expect": true,
		"gc": true,
		"sinonSandbox": true
	},
	"rules": {
		"arrow-body-style": "off",
		"chai-expect/missing-assertion": "error",
		"chai-expect/no-inner-compare": "error"
	}
}
